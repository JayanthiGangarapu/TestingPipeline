<?xml version="1.0" encoding="UTF-8"?>
<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingCriteriaRules>
        <fullName>CMM_AccountCreationRequestCaseSharing</fullName>
        <accessLevel>Read</accessLevel>
        <description>#SAL-452 - Rule to share all the case that belongs to &#39;Account Creation Request&#39; record type with all the internal users.</description>
        <label>Account Creation Request Case Sharing</label>
        <sharedTo>
            <allInternalUsers></allInternalUsers>
        </sharedTo>
        <criteriaItems>
            <field>RecordTypeId</field>
            <operation>equals</operation>
            <value>Account Creation Request</value>
        </criteriaItems>
        <includeRecordsOwnedByAll>true</includeRecordsOwnedByAll>
    </sharingCriteriaRules>
</SharingRules>
